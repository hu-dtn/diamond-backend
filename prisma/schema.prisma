generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Diamond {
  id             Int      @id @default(autoincrement())
  stockId        String   @unique
  shape          String
  carat          Float
  color          String
  clarity        String
  cut            String
  polish         String?
  symmetry       String?
  measurements   String
  location       String
  lab            String
  certNumber     String?
  certPdfUrl     String?
  price          Float?
  pricePerCarat  Float?
  currency       String   @default("USD")
  priceOnRequest Boolean  @default(false)
  fluorescence   String?
  availability   String   @default("In Stock")
  images         Json?
  videoUrl       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
